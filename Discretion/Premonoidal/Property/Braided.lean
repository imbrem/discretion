theorem braidedClosure.induction' {motive : ‚àÄ {X Y : C} (f : X ‚ü∂ Y), braidedClosure W f ‚Üí Prop}
  (id : ‚àÄ {X : C}, motive (ùüô X) braidedClosure.id)
  (comp : ‚àÄ {X Y Z : C} {f : X ‚ü∂ Y} {g : Y ‚ü∂ Z}
    (hf : braidedClosure W f) (hg : braidedClosure W g)
    (_ : motive f hf) (_ : motive g hg),
    motive (f ‚â´ g) (braidedClosure.comp hf hg))
  (whiskerLeft : ‚àÄ {X Y Z : C} {f : X ‚ü∂ Y}
    (hf : braidedClosure W f)
    (_ : motive f hf),
    motive (Z ‚óÅ f) (braidedClosure.whiskerLeft hf))
  (whiskerRight : ‚àÄ {X Y Z : C} {f : X ‚ü∂ Y}
    (hf : braidedClosure W f)
    (_ : motive f hf),
    motive (f ‚ñ∑ Z) (braidedClosure.whiskerRight hf))
  (associator_hom : ‚àÄ{X Y Z : C}, motive
    (Œ±_ X Y Z).hom braidedClosure.associator_hom)
  (associator_inv : ‚àÄ{X Y Z : C}, motive
    (Œ±_ X Y Z).inv braidedClosure.associator_inv)
  (leftUnitor_hom : ‚àÄ{X : C}, motive
    (Œª_ X).hom braidedClosure.leftUnitor_hom)
  (leftUnitor_inv : ‚àÄ{X : C}, motive
    (Œª_ X).inv braidedClosure.leftUnitor_inv)
  (rightUnitor_hom : ‚àÄ{X : C}, motive
    (œÅ_ X).hom braidedClosure.rightUnitor_hom)
  (rightUnitor_inv : ‚àÄ{X : C}, motive
    (œÅ_ X).inv braidedClosure.rightUnitor_inv)
  (braiding_hom : ‚àÄ{X Y : C}, motive
    (œÉ_ X Y) braidedClosure.braiding_hom)
  (braiding_inv : ‚àÄ{X Y : C}, motive
    (BraidedCategoryStruct.braiding X Y).inv braidedClosure.braiding_inv)
  (base : ‚àÄ {X Y : C} {f : X ‚ü∂ Y}
    (hf : W f),
    motive f (braidedClosure.base f hf))
  {f : X ‚ü∂ Y} (hf : braidedClosure W f)
  : motive f hf
  := by induction hf using braidedClosure.induction with
  | braided h => cases h using braidedStructure.cases' <;> apply_assumption
  | _ => apply_assumption <;> assumption

