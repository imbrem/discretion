theorem braidedStructure.cases' {motive : ‚àÄ {X Y : C} (f : X ‚ü∂ Y), braidedStructure C f ‚Üí Prop}
  (associator_hom : ‚àÄ {X Y Z : C}, motive (Œ±_ X Y Z).hom braidedStructure.associator_hom)
  (associator_inv : ‚àÄ {X Y Z : C}, motive (Œ±_ X Y Z).inv braidedStructure.associator_inv)
  (leftUnitor_hom : ‚àÄ {X : C}, motive (Œª_ X).hom braidedStructure.leftUnitor_hom)
  (leftUnitor_inv : ‚àÄ {X : C}, motive (Œª_ X).inv braidedStructure.leftUnitor_inv)
  (rightUnitor_hom : ‚àÄ {X : C}, motive (œÅ_ X).hom braidedStructure.rightUnitor_hom)
