  (hf : braidedClosure W f)
  : braidedClosure W (f ‚ñ∑ Z) := whiskerClosure.whiskerRight hf

theorem braidedClosure.monoidalS {X Y : C} {f : X ‚ü∂ Y}
  (hf : monoidalStructure C f)
  : braidedClosure W f := whiskerClosure.base (Or.inl (braidedStructure.monoidal hf))

theorem braidedClosure.braided {X Y : C} {f : X ‚ü∂ Y}
  (hf : braidedStructure C f)
  : braidedClosure W f := whiskerClosure.base (Or.inl hf)

theorem braidedClosure.associator_hom {X Y Z : C}
  : braidedClosure W (Œ±_ X Y Z).hom := monoidalS monoidalStructure.associator_hom

theorem braidedClosure.associator_inv {X Y Z : C}
  : braidedClosure W (Œ±_ X Y Z).inv := monoidalS monoidalStructure.associator_inv

theorem braidedClosure.leftUnitor_hom {X : C}
  : braidedClosure W (Œª_ X).hom := monoidalS monoidalStructure.leftUnitor_hom

theorem braidedClosure.leftUnitor_inv {X : C}
  : braidedClosure W (Œª_ X).inv := monoidalS monoidalStructure.leftUnitor_inv

theorem braidedClosure.rightUnitor_hom {X : C}
  : braidedClosure W (œÅ_ X).hom := monoidalS monoidalStructure.rightUnitor_hom

theorem braidedClosure.rightUnitor_inv {X : C}
  : braidedClosure W (œÅ_ X).inv := monoidalS monoidalStructure.rightUnitor_inv

theorem braidedClosure.braiding_hom {X Y : C}
  : braidedClosure W (œÉ_ X Y) := braided braidedStructure.braiding_hom

theorem braidedClosure.braiding_inv {X Y : C}
  : braidedClosure W (BraidedCategoryStruct.braiding X Y).inv
    := braided braidedStructure.braiding_inv

theorem braidedClosure.base {X Y : C} (f : X ‚ü∂ Y)
  (hf : W f)
  : braidedClosure W f := whiskerClosure.base (Or.inr hf)

theorem braidedClosure.induction {motive : ‚àÄ {X Y : C} (f : X ‚ü∂ Y), braidedClosure W f ‚Üí Prop}
  (id : ‚àÄ {X : C}, motive (ùüô X) braidedClosure.id)
  (comp : ‚àÄ {X Y Z : C} {f : X ‚ü∂ Y} {g : Y ‚ü∂ Z}
    (hf : braidedClosure W f) (hg : braidedClosure W g)
    (_ : motive f hf) (_ : motive g hg),
    motive (f ‚â´ g) (braidedClosure.comp hf hg))
  (whiskerLeft : ‚àÄ {X Y Z : C} {f : X ‚ü∂ Y}
    (hf : braidedClosure W f)
    (_ : motive f hf),
    motive (Z ‚óÅ f) (braidedClosure.whiskerLeft hf))
  (whiskerRight : ‚àÄ {X Y Z : C} {f : X ‚ü∂ Y}
    (hf : braidedClosure W f)
    (_ : motive f hf),
    motive (f ‚ñ∑ Z) (braidedClosure.whiskerRight hf))
  (braided : ‚àÄ {X Y : C} {f : X ‚ü∂ Y}
    (hf : braidedStructure C f),
    motive f (braidedClosure.braided hf))
  (base : ‚àÄ {X Y : C} {f : X ‚ü∂ Y}
    (hf : W f),
    motive f (braidedClosure.base f hf))
  {f : X ‚ü∂ Y} (hf : braidedClosure W f)
  : motive f hf
  := by induction hf with
  | base h => cases h with | inl h => exact braided h | inr h => exact base h
  | _ => apply_assumption <;> assumption

