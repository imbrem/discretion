  | braiding_hom : braidedStructure C (œÉ_ X Y)
  | braiding_inv : braidedStructure C (BraidedCategoryStruct.braiding X Y).inv

variable {C : Type _} [Category C] [MonoidalCategoryStruct C] [BraidedCategoryStruct C]

